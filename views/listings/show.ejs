<% layout("layout/boilerplate") %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .event-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        padding: 40px 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .main-content {
        padding-right: 20px;
    }

    .sidebar {
        position: sticky;
        top: 100px;
    }

    /* Header */
    .event-header {
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e5e7eb;
    }

    .event-mode-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #fee2e2;
        color: #991b1b;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .event-title {
        font-size: 36px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 15px;
    }

    .event-subtitle {
        color: #6b7280;
        font-size: 16px;
        margin-bottom: 20px;
    }

    /* Info Pills */
    .info-pills {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .info-pill {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .info-pill-label {
        color: #9ca3af;
        font-size: 12px;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .info-pill-value {
        color: #1f2937;
        font-size: 16px;
        font-weight: 600;
    }

    .info-pill-icon {
        font-size: 14px;
        color: #667eea;
        margin-right: 5px;
    }

    /* Section */
    .event-section {
        margin-bottom: 50px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-left: 15px;
        border-left: 4px solid #667eea;
    }

    .section-title i {
        color: #667eea;
        font-size: 18px;
    }

    .section-content {
        background: #f9fafb;
        padding: 20px;
        border-radius: 10px;
        line-height: 1.8;
        color: #4b5563;
    }

    .section-content p {
        margin-bottom: 15px;
    }

    .section-content ul {
        margin-left: 20px;
        margin-bottom: 15px;
    }

    .section-content li {
        margin-bottom: 10px;
        color: #4b5563;
    }

    .tags-group {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

    .tag {
        background: white;
        border: 1px solid #e5e7eb;
        padding: 8px 14px;
        border-radius: 20px;
        font-size: 13px;
        color: #4b5563;
    }

    /* Sidebar Card */
    .sidebar-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 25px;
        margin-bottom: 20px;
    }

    .register-btn {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 15px;
    }

    .register-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .register-info {
        text-align: center;
        padding: 15px;
        background: #f0f4ff;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .register-info-number {
        font-size: 24px;
        font-weight: 700;
        color: #667eea;
    }

    .register-info-label {
        font-size: 12px;
        color: #6b7280;
        margin-top: 5px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .action-btn {
        flex: 1;
        padding: 10px;
        border: 1px solid #e5e7eb;
        background: white;
        border-radius: 8px;
        color: #667eea;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        font-size: 13px;
    }

    .action-btn:hover {
        background: #f3f4f6;
    }

    .edit-btn {
        background: #3b82f6;
        color: white;
        border: none;
    }

    .edit-btn:hover {
        background: #2563eb;
    }

    .delete-btn {
        background: #ef4444;
        color: white;
        border: none;
    }

    .delete-btn:hover {
        background: #dc2626;
    }

    .back-btn {
        background: #6b7280;
        color: white;
        border: none;
    }

    .back-btn:hover {
        background: #4b5563;
    }

    @media (max-width: 1024px) {
        .event-container {
            grid-template-columns: 1fr;
        }

        .main-content {
            padding-right: 0;
        }

        .sidebar {
            position: static;
        }

        .event-title {
            font-size: 28px;
        }
    }

    @media (max-width: 768px) {
        .info-pills {
            flex-direction: column;
            gap: 10px;
        }

        .event-title {
            font-size: 24px;
        }
    }
</style>

<div class="event-container">
    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="event-header">
            <span class="event-mode-badge">
                <i class="fas fa-<%= listing.mode === 'Online' ? 'globe' : 'map-marker-alt' %>"></i>
                <%= listing.mode %>
            </span>
            <h1 class="event-title"><%= listing.title %></h1>
            <p class="event-subtitle"><%= listing.location %></p>

            <!-- Info Pills -->
            <div class="info-pills">
                <div class="info-pill">
                    <span class="info-pill-label"><i class="fas fa-calendar info-pill-icon"></i>Date</span>
                    <span class="info-pill-value"><%= new Date(listing.date).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %></span>
                </div>
                <div class="info-pill">
                    <span class="info-pill-label"><i class="fas fa-users info-pill-icon"></i>Team Size</span>
                    <span class="info-pill-value"><%= listing.teamSize %></span>
                </div>
                <div class="info-pill">
                    <span class="info-pill-label"><i class="fas fa-trophy info-pill-icon"></i>Prize</span>
                    <span class="info-pill-value"><%= listing.prize %></span>
                </div>
                <div class="info-pill">
                    <span class="info-pill-label"><i class="fas fa-tag info-pill-icon"></i>Status</span>
                    <span class="info-pill-value">
                        <span class="badge bg-<%= listing.status === 'Open' ? 'success' : listing.status === 'Upcoming' ? 'warning' : 'danger' %>">
                            <%= listing.status %>
                        </span>
                    </span>
                </div>
            </div>
        </div>

        <!-- About Section -->
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-info-circle"></i> About
            </h2>
            <div class="section-content">
                <p>This is a <strong><%= listing.category %></strong> event focused on <strong><%= listing.theme %></strong>.</p>
                <p>Join us for an amazing experience where you can showcase your skills, compete with others, and win exciting prizes!</p>
            </div>
        </div>

        <!-- Theme Section -->
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-tasks"></i> Theme
            </h2>
            <div class="section-content">
                <div class="tags-group">
                    <span class="tag"><strong><%= listing.theme %></strong></span>
                    <span class="tag">Category: <%= listing.category %></span>
                    <span class="tag">Mode: <%= listing.mode %></span>
                </div>
            </div>
        </div>

        <!-- Details Section -->
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-cog"></i> Details
            </h2>
            <div class="section-content">
                <ul>
                    <li><strong>Event Name:</strong> <%= listing.title %></li>
                    <li><strong>Category:</strong> <%= listing.category %></li>
                    <li><strong>Theme:</strong> <%= listing.theme %></li>
                    <li><strong>Date:</strong> <%= new Date(listing.date).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %></li>
                    <li><strong>Mode:</strong> <%= listing.mode %></li>
                    <li><strong>Location:</strong> <%= listing.location %></li>
                    <li><strong>Prize Pool:</strong> <%= listing.prize %></li>
                    <li><strong>Team Size:</strong> <%= listing.teamSize %></li>
                    <li><strong>Status:</strong> <%= listing.status %></li>
                </ul>
            </div>
        </div>

        <!-- Eligibility Section -->
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-check-circle"></i> Eligibility
            </h2>
            <div class="section-content">
                <ul>
                    <li>All students and professionals are eligible to participate</li>
                    <li>Team size should be <%= listing.teamSize %></li>
                    <li>Valid identity proof may be required during registration</li>
                    <li>Participants must follow all event guidelines and rules</li>
                </ul>
            </div>
        </div>

        <!-- Timeline Section -->
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-hourglass-end"></i> Timeline
            </h2>
            <div class="section-content">
                <ul>
                    <li><strong>Registration Opens:</strong> Immediately</li>
                    <li><strong>Event Date:</strong> <%= new Date(listing.date).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %></li>
                    <li><strong>Results:</strong> To be announced on event completion</li>
                    <li><strong>Prize Distribution:</strong> Within 7 days of event completion</li>
                </ul>
            </div>
        </div>

        <!-- Organizer Section -->
        <% if(listing.owner) { %>
        <div class="event-section">
            <h2 class="section-title">
                <i class="fas fa-user"></i> Organizer
            </h2>
            <div class="section-content">
                <p><strong><%= listing.owner.username %></strong></p>
                <p style="font-size: 14px; color: #9ca3af;">Event organized and managed by <%= listing.owner.username %></p>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Register Card -->
        <div class="sidebar-card">
            <button class="register-btn">
                <i class="fas fa-user-check"></i> Register Now
            </button>

            <div class="register-info">
                <div class="register-info-number">67</div>
                <div class="register-info-label">Registrations</div>
            </div>

            <% if(currUser && listing.owner.equals(currUser._id)) { %>
            <div class="action-buttons">
                <a href="/listings/<%= listing._id %>/edit" class="action-btn edit-btn">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="flex: 1;">
                    <button type="submit" class="action-btn delete-btn" style="width: 100%; margin: 0;" onclick="return confirm('Delete this event?')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
            <% } %>

            <div class="action-buttons">
                <a href="/listings" class="action-btn back-btn" style="flex: 1; text-align: center; text-decoration: none;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <!-- Share Card -->
        <div class="sidebar-card">
            <h3 class="section-title" style="margin-bottom: 15px; font-size: 16px; border-left: none; padding-left: 0;">
                <i class="fas fa-share-alt"></i> Share
            </h3>
            <div class="action-buttons" style="flex-direction: column; gap: 8px;">
                <button class="action-btn" style="background: #1f2937; color: white;">
                    <i class="fab fa-whatsapp"></i> WhatsApp
                </button>
                <button class="action-btn" style="background: #1da1f2; color: white;">
                    <i class="fab fa-twitter"></i> Twitter
                </button>
                <button class="action-btn" style="background: #4267B2; color: white;">
                    <i class="fab fa-facebook"></i> Facebook
                </button>
            </div>
        </div>
    </div>
</div>

